doctype html
html(lang='en')
  head
    include includes/head

  body
    .navbar.navbar-fixed-top.navbar-inverse(role="navigation")
        .container
            .navbar-header
                button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                    span.sr-only Toggle navigation
                    span.glyphicon.glyphicon-list(style="color:white;")
                a.navbar-brand(href="/") {%= name %}
            .collapse.navbar-collapse.collapse
                if (!agent)
                    ul.nav.navbar-nav
                        li
                            a(href="/login") Login
                else
                    ul.nav.navbar-nav
                        if (agent.admin)
                             li
                                a(href="/admin") Admin
                        li
                            a(href="/account") Account
                        li
                            a(href="/logout") Logout
    .container

        block content

        block footer
            footer.page-footer
                p &copy; {%= author_name %} 2013


    | !{cachify_js('/bower_components/jquery/jquery.min.js')}
    | !{cachify_js('/bower_components/bootstrap/dist/js/bootstrap.min.js')}
    | !{cachify_js('/js/site.js')}
    block scripts
